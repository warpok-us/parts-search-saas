{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": false,
    "isolatedModules": true,
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@parts-domain": ["packages/parts-domain/src"],
      "@parts-application": ["packages/parts-application/src"],
      "@parts-infrastructure": ["packages/parts-infrastructure/src"],
      "@shared-kernel": ["packages/shared-kernel/src"],
      "@partsy/parts-domain": ["packages/parts-domain/src"],
      "@partsy/parts-application": ["packages/parts-application/src"],
      "@partsy/parts-infrastructure": ["packages/parts-infrastructure/src"],
      "@partsy/shared-kernel": ["packages/shared-kernel/src"]
    }
  }
}
